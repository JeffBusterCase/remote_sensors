<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/access_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar na web: remotesensorjeffraf.azurewebsites.net"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="150dp"/>
    <TextView
        android:id="@+id/txt_sample_vw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensors: 0"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/btn_request"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Habilitar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_sample_vw"/>
    <Button
        android:id="@+id/btn_sample"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Enviar Unica vez"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_request"
        android:textColor="@android:color/holo_blue_bright"
        />
</RelativeLayout>